#include <wiringPi.h>
#include <stdio.h>
#include <unistd.h>
#define DEBOUNCE_TIME 200
const int LedRed[8]={4,17,18,27,22,23,24,25};
const int Keypad[8]={16,13,12,6,21,26,20,19};
int Sign[8]={1,1,1,1,1,1,1,1};
int KeypadRead(){
	int i, keypadnum=-1;
	for(i=0; i<8; i++){
		if(!digitalRead(Keypad[i])){
			keypadnum=i;
			break;
		}
	}
	return keypadnum;
}

void LedControl(int keypadnum){
	int i;
	static unsigned long last=0, flag=1;
	unsigned long cur=millis();
	if(cur-last>DEBOUNCE_TIME){
	flag=!flag;
	for(i=0; i<8; i++){
		if(i==keypadnum){
			if(Sign[i]==-1)	
				digitalWrite(LedRed[i], flag);
			else if(Sign[i])
				digitalWrite(LedRed[i],LOW);
		}
	}
	}
	last=cur;

}

int main(void){
	int i, keypadnum=-1;
	if(wiringPiSetupGpio()==-1)
		return 1;

	for(i=0; i<8; i++){
		pinMode(LedRed[i], OUTPUT);
		digitalWrite(LedRed[i], LOW);
	}
	for(i=0; i<8; i++)
		pinMode(Keypad[i], INPUT);
	while(1){
		keypadnum=KeypadRead();
		LedControl(keypadnum);
	}
	return 0;

}
